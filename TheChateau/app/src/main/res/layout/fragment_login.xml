<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.thechateau.LoginFragment">


    <RelativeLayout

        android:layout_height="300dp"
        android:layout_width="300dp"
        android:background="#000000"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_height="270dp"
        android:layout_width="270dp"
        android:background="#a4c639"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <!-- Login Title -->
        <TextView
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Login"
            android:textColor="#000000"
            android:gravity="center_horizontal"/>

        <!--Spacer Between Login Title and Input Fields -->
        <View
            android:id="@+id/spacer"
            android:layout_width="match_parent"
            android:layout_height="60dp">
        </View>

        <!-- Enter Username Layout -->
        <LinearLayout
            android:id="@+id/UsernameLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/spacer"
            android:gravity="center_vertical">

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="17sp"
                android:paddingLeft="20dp"
                />

            <!-- Spacer in between Username text and EditText -->
            <View
                android:layout_width="10dp"
                android:layout_height="10dp">

            </View>

            <!-- Horizontal Scroll View lets text scroll right,
               if user writes a really long username-->
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollHorizontally="true">

                <EditText
                    android:id="@+id/UsernameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:hint="Enter Username"
                    android:inputType="text"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    />
            </HorizontalScrollView>
        </LinearLayout>


        <!-- Enter Password Layout -->
        <LinearLayout
            android:id="@+id/PasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/UsernameLayout"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="#000000"
                android:textSize="17sp"
                android:paddingLeft="20dp"
                />

            <!-- Spacer between Password text and EditText -->
            <View
                android:layout_width="10dp"
                android:layout_height="10dp">

            </View>

            <!-- Horizontal Scroll View lets text scroll right,
                 if user writes a really long password -->
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollHorizontally="true">

                <EditText
                    android:id="@+id/PasswordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:scrollHorizontally="true"

                    />
            </HorizontalScrollView>

        </LinearLayout>

        <!-- Check Box Layout -->
        <LinearLayout
            android:id="@+id/CheckBoxLayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/PasswordLayout"
            >

            <CheckBox
                android:id="@+id/AuthenticationCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tufts Authentication"/>


        </LinearLayout>

        <!-- Login Info Layout -->
        <LinearLayout
            android:id="@+id/LoginButtonSpacer"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/CheckBoxLayout"
            >
            <TextView
                android:id="@+id/LoginInfoMessage"
                android:textColor="#000000"
                android:text="Please Login"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"

                >
            </TextView>
        </LinearLayout>

        <!-- Login Button Layout -->
        <LinearLayout
            android:id="@+id/SubmitLayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@+id/LoginButtonSpacer"
            android:gravity="center">

            <Button
                android:id="@+id/LoginButton"
                android:background="@color/colorPrimaryDark"
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >

            </Button>

        </LinearLayout>



    </android.support.constraint.ConstraintLayout>


</RelativeLayout>
