<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.thechateau.LoginFragment">


    <RelativeLayout

        android:layout_height="300dp"
        android:layout_width="300dp"
        android:background="#000000"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_height="270dp"
        android:layout_width="270dp"
        android:background="#a4c639"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TextView
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Login"
            android:gravity="center_horizontal"/>

        <!--Spacer Between Login Title and Input Fields -->
        <View
            android:id="@+id/spacer"
            android:layout_width="match_parent"
            android:layout_height="80dp">
        </View>

        <LinearLayout
            android:id="@+id/UsernameLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/spacer"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:paddingLeft="20dp"
                />

            <!-- Spacer in between Username text and EditText -->
            <View
                android:layout_width="20dp"
                android:layout_height="20dp">

            </View>

            <EditText
                android:id="@+id/UsernameEditText"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ff000000"
                android:hint="Enter Username"

                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/PasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/UsernameLayout"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:paddingLeft="20dp"
                />

            <!-- Spacer in between Password text and EditText -->
            <View
                android:layout_width="20dp"
                android:layout_height="20dp">

            </View>

            <EditText
                android:id="@+id/PasswordEditText"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Enter Password"
                android:inputType="textPassword"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LoginButtonSpacer"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/PasswordLayout"
            >
            <TextView
                android:id="@+id/LoginInfoMessage"
                android:text="Please Login"
                android:textSize="10dp"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"

                >

            </TextView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/SubmitLayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@+id/LoginButtonSpacer"
            android:gravity="center">

            <Button
                android:id="@+id/LoginButton"
                android:background="@color/colorPrimaryDark"
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >

            </Button>

        </LinearLayout>



    </android.support.constraint.ConstraintLayout>


</RelativeLayout>
