<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:padding="10dp">

        <!-- Vertical Layout with Chat Name and History Preview -->
        <LinearLayout
            android:id="@+id/ChatNameAndPreviewLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toLeftOf="@id/chatRowSeparator">

            <TextView
                android:id="@+id/chatNameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="Spencer"
                android:textColor="#000000"
                android:textSize="15sp"

                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/chatHistoryPreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="SampleChatMessage"
                android:textColor="#000000"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:id="@+id/chatRowSeparator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

        </View>

        <LinearLayout
            android:id="@+id/NotificationLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_toRightOf="@id/chatRowSeparator">

            <TextView
                android:id="@+id/chatNotificationView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/NotificationColor"
                android:gravity="center_vertical"
                >

            </TextView>

        </LinearLayout>

        <!-- Notification View -->



</RelativeLayout>